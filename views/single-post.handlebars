
{{> post-info post}}
{{#if loggedIn}}
<div id="status"></div>
<form class="comment-form" id="ratingForm">
  <div>
    <textarea class="ml-5" name="comment-body"></textarea>
  </div>
  <div>
    <fieldset class="rating">
        <legend>Please rate:</legend>
        <input type="radio" id="star5" name="rating" class="rate"  value="5" /><label for="star5" title="5 Star">5 stars</label>
        <input type="radio" id="star4" name="rating" class="rate" value="4" /><label for="star4" title="4 Star">4 stars</label>
        <input type="radio" id="star3" name="rating" class="rate" value="3" /><label for="star3" title="3 Star">3 stars</label>
        <input type="radio" id="star2" name="rating" class="rate" value="2" /><label for="star2" title="2 Star">2 stars</label>
        <input type="radio" id="star1" name="rating" class="rate" value="1" /><label for="star1" title="1 Star">1 star</label>
    </fieldset>
  </div>
  <div class="clearfix"></div>
  <div>
    <button class="button is-warning ml-5 mb-5 submit clearfix" type="submit">add comment</button>
  </div>
  
</form>
{{!-- <script src="/javascript/comment.js"></script> --}}

{{/if}}


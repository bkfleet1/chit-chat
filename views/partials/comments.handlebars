<div class="comments">
  {{#each this}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{format_date created}}
      </div>
      <div class="text comment_text">
        {{comment_text}}
        {{video}}
        {{photo}}
      </div>
      <div class="rated">
        <div
          class="Stars"
          style="--rating: {{rate}};">
        </div>
      </div>
    </section>
  {{/each}}
</div>
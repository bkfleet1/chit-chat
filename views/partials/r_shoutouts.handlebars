    <article class="shoutout">
      <div class="shout_container">
        <div class="shout_user">
          <span class="fas fa-user"></span> {{user.userFname}}
          {{user.userLname}} - {{user.city}}, {{user.state}}
        </div>
        <div class="shout_message">
          {{format_date created_at}} - {{message}}
        </div>

        <div class="shout_info">
          <div>
            <a href="/shoutout/{{id}}"
              >{{comments.length}} {{format_plural "comment"
              comments.length}}</a>
          </div>
          <div>{{#if rating_average}} Rating: {{rating_average}} {{/if}}</div>
          {{!-- <div class="messages">{{comments.message}}</div> --}}
        </div>
      </div>
    </article>
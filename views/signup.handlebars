<div class="column">
  <h2 class="title pb-4">create an account:</h2><hr />
  <form class="signup-form">
    <div>
      <label for="username-signup">username:</label>
      <input type="text" id="username-signup" />
    </div>
    <div>
      <label for="email-signup">email:</label>
      <input type="text" id="email-signup" />
    </div>
    <div>
      <label for="fName-signup">first name:</label>
      <input type="text" id="fName-signup" />
    </div>
    <div>
      <label for="lName-signup">last name:</label>
      <input type="text" id="lName-signup" />
    </div>
    <div>
      <label for="password-signup">password:</label>
      <input type="password" id="password-signup" />
    </div>
    <div>
      <button type="submit" class="btn is-primary">signup</button>
    </div>
  </form>
</div>


    <div class="mb-5 pt-3">
        <a href="/dashboard/create/"><button id="create-post" class="button is-primary is-pulled-right">Create</button></a>
        <h2 class="title pb-4">Shout Out</h2><hr>
    </div>
    {{#if posts.length}}
        <ol class="post-list">
        {{#each posts as |post|}}
            <li>
            {{> post-info post }}
            </li>
        <a href="/dashboard/edit/{{post.id}}"><button class="button mb-5 ml-5 is-warning">Edit</button></a>
        {{/each}}
        </ol>
    {{else}}
    <h6 class="pb-4 has-text-centered is-italic">No Shout Out Found!</h6>
    {{/if}}


